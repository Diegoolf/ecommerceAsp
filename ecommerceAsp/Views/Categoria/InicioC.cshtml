
<div class="container mt-2 p-0">
  

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center bg-white">
            <div class="col-auto">
                <h4><i class="bi bi-box-seam-fill"></i> Categorias</h4>
            </div>

            <div class="col-auto">
                <input class="form-control search-input search " id="buscador" type="search" placeholder="Buscar..." aria-label="Search" />
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-sm btn-secondary text-white btnAbrirModalCategoria">
                    <i class="bi bi-plus"></i> Agregar
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="myGrid" class="ag-theme-quartz" style="height: 60vh; width: 100%;"></div>
        </div>
    </div>

</div>


<!-- Modal agregar categoria -->
<div class="modal fade" id="ModalAgregarCategoria" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
		<div class="modal-content">
			@Html.AntiForgeryToken()
            <form id="formCrearCategoria">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar Categoria</h5>
                    <button type="button" class="btn-close btnCerrarModal">
                    </button>
                </div>
                <div class="modal-body row">
                    <div class="form-floating mb-3">
                        <input name="Nombre" id="nombreCategoria" class="form-control" autocomplete="nombreproducto" aria-required="true" placeholder="" required />
                        <label class="form-label ms-2">Nombre de la Categoria</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea name="Descripcion" id="descripcionCategoria" class="form-control" id="exampleFormControlTextarea1" style="height: 150px"></textarea>
                        <label for="exampleFormControlTextarea1" class="form-label ms-2">Descripcion</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" style="background-color:#78c0ca" class="btn">Guardar</button>
                </div>

            </form>

        </div>
    </div>
</div>

@* modal activar/desactivar *@
<div class="modal fade" id="ModalActivar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formCambiarEstado" >
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><span class="SpanAct"></span> producto: <b class="SpanNombre"></b></h5>
                    <button type="button" class="btn-close btnCerrarModalAct" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Esta seguro de que desea <b class="SpanAct"></b> el producto <b class="SpanNombre"></b>?
                    <input type="hidden" name="id" id="inputIdProductoAct" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnCerrarModalAct">Close</button>
                    <button type="submit" id="btnActualizarEstatus" class="btn btn-outline-danger"><b class="SpanAct"></b> </button>
                </div>
            </form>

        </div>
    </div>
</div>


@* editar producto *@
<div class="modal fade" id="ModalEditarCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formEditarCategoria">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editar Categoria</h5>
                    <button type="button" class="btn-close btnCerrarModalEditar" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input name="Nombre" id="inpNombreEdit" class="form-control" autocomplete="nombreproducto" aria-required="true" placeholder="" required />
                        <label class="form-label ms-2">Nombre de la Categoria</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea name="Descripcion" id="txtDescripcionEdit" class="form-control" id="exampleFormControlTextarea1" style="height: 150px"></textarea>
                        <label for="exampleFormControlTextarea1" class="form-label ms-2">Descripcion</label>
                    </div>
                    <input type="hidden" name="id" id="inputIdProductoEdit" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnCerrarModalEditar">Close</button>
                    <button type="submit" style="background-color:#78c0ca" class="btn ">Editar</button>
                </div>
            </form>


        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Categoria.js"></script>
    <script src="~/js/AbrirCerrarModal.js"></script>
       }